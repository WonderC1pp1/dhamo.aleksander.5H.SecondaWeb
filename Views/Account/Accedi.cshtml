@model dhamo.aleksander._5H.SecondaWeb.dto.LoginDto

@{
    ViewData["Title"] = "Accedi";
}

<link rel="stylesheet" href="/css/accediStyle.css" />

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="/SitoTema/images/imgUtente.png" width="30%" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <form method="post" asp-controller="Account" asp-action="Accedi">

      <div asp-validation-summary="All" class="text-danger"></div>
      
      <input asp-for="Email" type="text" class="form-control" placeholder="email">

      <input asp-for="Password" type="password" class="form-control" placeholder="password">

      <br>
      
      <input type="submit" class="fadeIn fourth" value="Accedi">

    </form>

    <!-- Crea account -->
    <div id="formFooter">
      <a asp-area="" asp-controller="Account" asp-action="Registra" class="underlineHover">Crea account</a>
    </div>

  </div>
</div>

