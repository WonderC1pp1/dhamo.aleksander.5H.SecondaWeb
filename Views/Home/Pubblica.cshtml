@model  dhamo.aleksander._5H.SecondaWeb.Models.Image
@{
    ViewData["Title"] = "Prenota";
}

<form method="POST" asp-action="Pubblica" asp-controller="Account" enctype="multipart/form-data">

    <br>

    <div class="form-group">
        @* uso pattern che impedisca l'invio dello spazio nuovo *@
        <input asp-for="Titolo" name="titolo" type="text" minlength="1" maxlength="50" class="form-control" placeholder="Titolo immagine (max 50 lettere e senza spazi)" pattern="[^' ']+" title="Inserisci un titolo valido">
    </div>

    <div class="form-group">
        <input asp-for="Descrizione" minlength="1" maxlength="200" type="textare" class="form-control" title="Solo lettere e numeri" placeholder="Descrizione immagine (max 200 caratteri)">
    </div>

    <div class="form-group">
        <input asp-for="linkImmagine" minlength="1" type="text" asp- class="form-control" aria-describedby="emailHelp" placeholder="Link immagine">
    </div>

    <button type="submit" class="btn btn-primary">Pubblica</button>

</form>