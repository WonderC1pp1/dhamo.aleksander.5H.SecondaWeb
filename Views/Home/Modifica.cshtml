@using Microsoft.EntityFrameworkCore
@model  dhamo.aleksander._5H.SecondaWeb.Models.Image

@{
    ViewData["Title"] = "Modifica";
    Image prenotazione=Model;
}

<form method="POST" asp-action="Modifica" asp-controller="Home" enctype="multipart/form-data">

    <br>

    <div class="form-group">
        @* uso pattern che impedisca l'invio dello spazio nuovo *@
        <input asp-for="Titolo" name="titolo" type="text" minlength="1" maxlength="50" class="form-control"  pattern="[^' ']+" title="Inserisci un titolo valido">
    </div>

    <div class="form-group">
        <input asp-for="Descrizione" minlength="1" maxlength="200" type="textare" class="form-control" title="Solo lettere e numeri" >
    </div>

    <div class="form-group">
        <input asp-for="linkImmagine" minlength="1" type="text" class="form-control" aria-describedby="emailHelp" >
    </div>

    <input type="hidden" asp-for="idUtente"/>

    <input type="hidden" asp-for="idImage"/>

    <button type="submit" class="btn btn-primary">Salva modifiche</button>

</form>

