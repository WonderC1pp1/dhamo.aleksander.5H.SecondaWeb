@using Microsoft.EntityFrameworkCore
@model  dhamo.aleksander._5H.SecondaWeb.Models.Prenotazione

@{
    ViewData["Title"] = "Prenota";
    Prenotazione prenotazione=Model;
}

<div class="text-center">
    <h1 class="display-4">Modifica</h1>
    <form class="m-2" method="POST" asp-action="Modifica">
        <div class="form-group">
            <label asp-for="Nome">Il tuo nome</label>
            <input asp-for="Nome" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">La tua Email</label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Telefono">Il tuo numero di telefono</label>
            <input asp-for="Telefono" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Prenota</button>
    </form>
</div>